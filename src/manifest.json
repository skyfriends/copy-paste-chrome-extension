{
  "manifest_version": 2,
  "name": "Copy Pasta",
  "description": "Copy/paste addy!",
  "version": "1.0",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
    "background": {
      "scripts": ["background.js"]
    },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
